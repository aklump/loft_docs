{% spaceless %}
  <div class="pager">
    <a href="{{ prev }}" class="prev {{ prev_id }}">&laquo;{{ prev_title }}</a>
    {% if is_index %}
      {% if book.title %}<span class="pager__book-title">{{ book.title
      }}</span>{%
        endif %}
    {% else %}
      <a href="index.html" class="index">Index</a>
    {% endif %}
    <a href="{{ next }}" class="next {{ next_id }}">{{ next_title }}&raquo;</a>
  </div>
{% endspaceless %}
